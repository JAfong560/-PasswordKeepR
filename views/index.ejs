<!-- script and style setup -->
<%- include("partials/_html_setup.ejs") %>

  <body>
    <!-- Header -->
    <%- include("partials/_header.ejs") %>

      <div class="container">
        <div class="page-header"></div>

        <div class="accordion" id="addUserToggle">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Add account
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <form id="addUser">
                  <div class="form-group">
                    <label for="inputOrg" class="form-label mt-4">Organization</label>
                    <input type="text" class="form-control" id="inputOrg" aria-describedby="emailHelp"
                      placeholder="Enter organization">
                    <label for="inputURL" class="form-label mt-4">URL</label>
                    <input type="url" class="form-control" id="inputURL" aria-describedby="emailHelp" placeholder="Enter url">
                    <label for="inputPass" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" id="inputPass" aria-describedby="emailHelp"
                      placeholder="Enter password">
                    <label for="inputCat" class="form-label mt-4">Category</label>
                    <input type="text" class="form-control" id="inputCat" aria-describedby="emailHelp"
                      placeholder="Enter category">
                    <button class="addUser">Add user</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <br>

        <h1>Your passwords:</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Organization</th>
              <th scope="col">Stored Password</th>
              <th scope="col">URL</th>
              <th scope="col">Category</th>
            </tr>
          </thead>
          <tbody class="tPasswords">
            <tr class="table-primary">
              <th scope="row">Primary</th>
              <td>Column content</td>
              <td>Column content</td>
              <td>Column content</td>
              <td>
                <button type="button" class="btn btn-primary">Edit</button>
              </td>
            </tr>
            <tr class="table-secondary">
              <th scope="row">Secondary</th>
              <td>Column content</td>
              <td>Column content</td>
              <td>Column content</td>
              <td>
                <button type="button" class="btn btn-dark">Edit</button>
              </td>
            </tr>
          </tbody>
        </table>


      <% for (let store of locals.stores) {%>
        <tr>
          <td> <=% store.user_id %> </td>
          <td> <=% store.storedpass %> </td>
          <!-- Edit button -->
          <td> <=% store.site_url %> </td>
          <!-- Delete button -->
          <td>
              <form >
                <button type="Submit"> Edit </button>
              </form>
          </td>
        </tr>
        <%}%>
    </tbody>
  </table>

  <span>
    *****************here should be data************************

    <li><%=JSON.stringify(locals.data)%></li>
    <li><script src="/routes/users.js"></script></li>

</span>
</body>



  </html>
