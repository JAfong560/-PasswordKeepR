<!-- script and style setup -->
<%- include("partials/_html_setup.ejs") %>

  <body>
    <!-- Header -->
    <%- include("partials/_header.ejs") %>

      <div class="container">
        <div class="page-header"></div>

        <!-- Add user accordian form -->
        <div class="accordion" id="addUserToggle">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Add account
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <!-- Form input -->
                <form id="addUser" method="POST" action="/index">
                  <div class="form-group">
                    <label for="inputOrg" class="form-label mt-4">Organization</label>
                    <!-- <input type="text" class="form-control" name="inputOrg" placeholder="Enter organization #"> -->
                    <select class="form-control" name="inputOrg">
                      <option value="1">Lighthouse Labs</option>
                      <option value="2">Google</option>
                      <option value="3">Scotia Bank</option>
                      <option value="4">Startup</option>
                    </select>

                    <label for="inputURL" class="form-label mt-4">URL</label>
                    <input type="url" class="form-control" name="inputURL"  placeholder="Enter url http://">

                    <label for="inputCat" class="form-label mt-4">Category</label>
                    <select class="form-select" name="inputCat">
                      <option>Work related</option>
                      <option>Social</option>
                      <option>Entertainment</option>
                      <option>Other</option>
                    </select>
                    <label for="inputPass" class="form-label mt-4">Password will be autor generated</label>
                    <br>
                    <br>
                    <button class="addUser btn btn-dark">Add user</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <br>

        <h1>Your passwords:</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Organization</th>
              <th scope="col">Stored Password</th>
              <th scope="col">URL</th>
              <th scope="col">Category</th>
            </tr>
          </thead>
          <tbody class="tPasswords">
            <% let toggle = true %>
            <% for (let store of locals.stores) {%>
               <% if (toggle) {%>
              <tr class="table-primary">
                <th scope="row"> <%= store.org_name%> </th>
                <td> <%= store.storedpass %> </td>
                <td> <a href="url"> <%= store.site_url %> </a> </td>
                <td> <%= store.category %> </td>
                <td>
                    <form >
                      <button type="Submit" class="btn btn-primary"> Edit </button>
                    </form>
                </td>
                <td>
                  <button type="button" class="btn btn-primary cpButton" value="<%= store.storedpass %>"> Copy </button>
                </td>
              </tr>
              <% toggle = false; %>
              <% } else {%>
                <tr class="table-secondary">
                  <th scope="row"> <%= store.org_name %> </th>
                  <td> <%= store.storedpass %> </td>
                  <td> <a href="url"> <%= store.site_url %> </a> </td>
                  <td> <%= store.category %> </td>
                  <td>
                        <button type="Submit" class="btn btn-dark"> Edit </button>
                  </td>
                  <td>
                      <button type="button" class="btn btn-dark cpButton" value="<%= store.storedpass %>"> Copy </button>
                  </td>
                </tr>
              <% toggle = true;} %>
            <%}%>
          </tbody>
        </table>

  </body>

</html>
