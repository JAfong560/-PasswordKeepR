<!-- script and style setup -->
<%- include("partials/_html_setup.ejs") %>

  <body>
    <!-- Header -->
    <%- include("partials/_header.ejs") %>

      <div class="container">
        <div class="page-header"></div>

        <div class="accordion" id="addUserToggle">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Add account
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <form id="addUser" method="POST" action="/index">
                  <div class="form-group">
                    <label for="inputOrg" class="form-label mt-4">Organization #</label>
                    <input type="text" class="form-control" name="inputOrg" placeholder="Enter organization #">

                    <label for="inputURL" class="form-label mt-4">URL</label>
                    <input type="url" class="form-control" name="inputURL"  placeholder="Enter url">

                    <label for="inputPass" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" name="inputPass"  placeholder="Enter password">

                    <label for="inputCat" class="form-label mt-4">Category</label>
                    <input type="text" class="form-control" name="inputCat"    placeholder="Enter category">

                    <button class="addUser btn btn-dark">Add user</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <br>

        <h1>Your passwords:</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Organization</th>
              <th scope="col">Stored Password</th>
              <th scope="col">URL</th>
              <th scope="col">Category</th>
            </tr>
          </thead>
          <tbody class="tPasswords">
            <% let toggle = true %>
            <% for (let store of locals.stores) {%>
               <% if (toggle) {%>
              <tr class="table-primary">
                <th scope="row"> <%= store.org_name%> </th>
                <td> <%= store.storedpass %> </td>
                <td> <%= store.site_url %> </td>
                <td> <%= store.category %> </td>
                <td>
                    <form >
                      <button type="Submit" class="btn btn-primary"> Edit </button>
                    </form>
                </td>
              </tr>
              <% toggle = false; %>
              <% } else {%>
                <tr class="table-secondary">
                  <th scope="row"> <%= store.org_name %> </th>
                  <td> <%= store.storedpass %> </td>
                  <td> <%= store.site_url %> </td>
                  <td> <%= store.category %> </td>
                  <td>
                      <form >
                        <button type="Submit" class="btn btn-dark"> Edit </button>
                      </form>
                  </td>
                </tr>
              <% toggle = true;} %>
            <%}%>
          </tbody>
        </table>

